<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sectionButton"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/illustration_waiting"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_marginTop="46dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sabar ya kakak!"
            android:textSize="20sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#2D2F3A"/>
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Pesanan anda sedang di proses,\nPembayaran ketika barang di terima ya!"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="#2D2F3A"/>
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="40dp">
            <RelativeLayout
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorGray_08"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/view_circular_horizontal"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_circle"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_circle_gray"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                android:src="@drawable/ic_circle_gray"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textAlignment="center"
                    android:text="Pesanan\nDalam Proses"
                    android:textSize="10sp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textColor="@color/colorGreen"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Pesanan\nDalam Perjalanan"
                    android:textSize="10sp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textColor="#2D2F3A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textAlignment="center"
                    android:text="Pesanan\nTelah Sampai"
                    android:textSize="10sp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textColor="#2D2F3A"/>
            </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sectionButton"
        android:paddingVertical="24dp"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Jangan lupa konfirmasi pesanan ya,\nklik tombol di awah ini. . "
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="#2D2F3A"/>
        <LinearLayout
            android:id="@+id/btn_wa_me"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/view_radius_8"
            android:backgroundTint="@color/colorRed_2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Pesanan - Wa.me"
                android:fontFamily="@font/nunitosans_extrabold"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>